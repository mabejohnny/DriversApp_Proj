@model IEnumerable<TruckDriverApp.Models.CommentReview>

@{
    ViewData["Title"] = "ViewCommentsMade";
}




<h3 class="text-center text-uppercase">Facility Comments </h3>
 &nbsp;&nbsp;
<h5> Brought to you by fellow drivers</h5>

 &nbsp;&nbsp;
<p>
    <a asp-action="CommentReviewProfile" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add a Review</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.FacilityComments)</th>
            @*<th>@Html.DisplayNameFor(model => model.Rating)</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var CommentReview in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@CommentReview.FacilityPicture"
                         class="rounded-circle"
                         height="40" width="40"
                         asp-append-version="true" />
                    @CommentReview.FullName
                </td>
                <td>@CommentReview.FacilityComments</td>
                @*<td>@CommentReview.Rating</td>*@
            </tr>

        }
    </tbody>
</table>

<div>
    <a asp-action="AllFacilitys">Back to Facilities</a>
</div>  