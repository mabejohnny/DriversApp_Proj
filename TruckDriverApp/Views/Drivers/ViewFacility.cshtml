        defer></script>
<script>

    function initMap() {
       const map = new google.maps.Map(document.getElementById("map"), {
            center: { lat: @Model.Latitude, lng: @Model.Longitude },
           zoom: 18,
           mapTypeId: "satellite",
       });
        map.setTilt(45);
    }

